<%- include ('templates/header'); -%>
    <nav class = "nava">
        <center>
            <hr width="50%" />
            <a href = "/">LOGIN</a>
            <a href = "/profile"><u>PROFILE</u></a>
            <a href = "/createaccount">CREATE</a>
            <a href = "/travel">TRAVEL</a>
            <a href = "/locations">LOCATIONS</a>
            <a href = "/admin">ADMIN</a>
        </center>
    </nav>
    <main>
        <center>
            <h2><%=profile.name%></h2>
            
            <form action="/action_page.php" method="post" class="border">
                <div class="imgcontainer">
                    <img src="img/img_avatar.png" alt="Avatar" class="avatar"style="width:200px;height:200px;">
                </div>
                
                <div class="container">
                    <label for="uname"><b>Username: <%=profile.username%></b></label><br>
                    <label for="ename"><b>Email: <%=profile.email%></b></label><br>
                    <label for="age"><b>Age: <%=profile.age%></b></label>
                    <hr><br><br>
                    

                    <h3><b>DELETE YOUR ACCOUNT?</b></h3><br>
                    
                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" required>
                    
                    <button type="delete" style="background-color: #f44336">Delete Account</button>
                </div>
            </form>
        </center>
    </main>
    <br/>

